{% block body %}

<h3>{% trans %}TARTANA_NAV_LINK_PARAMETERS{% endtrans %}</h3>
<div ng-controller="ParametersCtrl">
	<form ng-submit="saveParameters()" class="form-horizontal">
		<div class="form-group" ng-repeat="parameter in parameters">
			<label for="file" class="col-sm-2 control-label">
				{[parameter.label]}
			</label>
			<div class="col-sm-10">
				<input type="text" name="{[parameter.key]}" 
					ng-change="setParameter({[parameter.key]})" 
					ng-model="parameter.value"
					class="form-control"/>
			</div>
		</div>
	</form>
</div>
{% endblock %}
