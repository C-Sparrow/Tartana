{% block body %}

<h3>{% trans %}TARTANA_VIEW_LOGIN_HEADER{% endtrans %}</h3>
<div ng-controller="LoginCtrl">
	<form ng-submit="getSalt()" class="form-horizontal">
		<div class="form-group">
			<label for="file" class="col-sm-2 control-label">
				{% trans %}TARTANA_VIEW_LOGIN_LABEL_USERNAME{% endtrans %}:
			</label>
			<div class="col-sm-10">
				<input type="text" ng-model="username" size="30">
			</div>
		</div>
		<div class="form-group">
			<label for="file" class="col-sm-2 control-label">
				{% trans %}TARTANA_VIEW_LOGIN_LABEL_PASSWORD{% endtrans %}:
			</label>
			<div class="col-sm-10">
				<input type="password" ng-model="password" size="30">
			</div>
		</div>
		<div class="form-group">
			<label for="file" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input class="btn-primary" type="submit" value="login">
			</div>
		</div>
	</form>
</div>
{% endblock %}
